<main class="text-gray-700 flex justify-center items-center min-h-[80vh] px-4">
  <div class="w-full max-w-md p-8 bg-yellow-200 rounded-2xl shadow">
    <!-- タイトル -->
    <h1 class="text-2xl font-bold text-center mb-6">パスワードリセット申請</h1>

    <!-- フラッシュメッセージ（成功・失敗） -->
    <% if flash[:notice] %>
      <div class="mb-6 text-sm text-green-600"><%= flash[:notice] %></div>
    <% end %>
    <% if flash[:alert] %>
      <div class="mb-6 text-sm text-red-600"><%= flash[:alert] %></div>
    <% end %>

    <!-- 入力エラー表示 -->
    <% if resource.errors.any? %>
      <div class="mb-6">
        <% resource.errors.full_messages.each do |msg| %>
          <div class="text-sm text-red-600 mt-1"><%= msg %></div>
        <% end %>
      </div>
    <% end %>

    <!-- メールアドレス入力フォーム -->
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="mb-6">
        <%= f.label :email, '登録済みのメールアドレスを入力してください', class: "block mb-1 font-semibold" %>
        <%= f.email_field :email, autofocus: true, id: "password_email", class: "w-full px-4 py-2 rounded border bg-white", autocomplete: "email" %>
      </div>
      <%= f.submit 'パスワード再設定用のメールを送信する', class: "w-full py-3 bg-primary text-white font-bold rounded-xl shadow hover:bg-primary/80 transition" %>
    <% end %>

    <!-- ログイン・新規登録リンク -->
    <div class="flex flex-col items-center justify-center mt-6 gap-2">
      <div class="flex items-center">
        <span class="mr-2 text-lg text-primary">▶</span>
        <%= link_to "ログインページに戻る", new_session_path(resource_name), class: "font-semibold text-accent hover:underline" %>
      </div>
      <div class="flex items-center">
        <span class="mr-2 text-lg text-primary">▶</span>
        <%= link_to "新規会員登録はこちら", new_registration_path(resource_name), class: "font-semibold text-accent hover:underline" %>
      </div>
    </div>
  </div>
</main>