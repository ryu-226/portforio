<main class="text-gray-700 flex justify-center items-center min-h-[80vh] px-4">
  <div class="w-full max-w-md p-8 bg-yellow-200 rounded-2xl shadow">
    <!-- タイトル -->
    <h1 class="text-2xl font-bold text-center mb-6">ログインページ</h1>

    <!-- エラー表示 -->
    <% if flash[:alert] %>
      <div class="mb-6 text-sm text-red-600"><%= flash[:alert] %></div>
    <% end %>
    <% if resource.errors.any? %>
      <div class="mb-6">
        <% resource.errors.full_messages.each do |msg| %>
          <div class="text-sm text-red-600 mt-1"><%= msg %></div>
        <% end %>
      </div>
    <% end %>

    <!-- 入力フォーム -->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-6">
        <%= f.label :email, 'メールアドレス', class: "block mb-1 font-semibold" %>
        <%= f.email_field :email, autofocus: true, id: "session_email", class: "w-full px-4 py-2 rounded border bg-white", autocomplete: "email" %>
      </div>
      <div class="mb-6">
        <%= f.label :password, 'パスワード', class: "block mb-1 font-semibold" %>
        <div class="relative">
          <%= f.password_field :password, id: "session_password", class: "w-full px-4 py-2 pr-10 rounded border bg-white password-field", autocomplete: "current-password" %>
          <i class="fa-solid fa-eye absolute top-1/2 right-3 transform -translate-y-1/2 cursor-pointer toggle-password text-gray-400"></i>
        </div>
      </div>
      <%= f.submit 'ログイン', class: "w-full py-3 bg-primary text-white font-bold rounded-xl shadow hover:bg-primary/80 transition" %>
    <% end %>

    <!-- パスワードリセット・新規会員登録への導線 -->
    <div class="flex flex-col items-center justify-center mt-6 gap-2">
      <div class="flex items-center">
        <span class="mr-2 text-lg text-primary">▶</span>
        <%= link_to "パスワードを忘れた方はこちら", new_user_password_path, class: "font-semibold text-accent hover:underline" %>
      </div>
      <div class="flex items-center">
        <span class="mr-2 text-lg text-primary">▶</span>
        <%= link_to "新規会員登録の方はこちら", new_user_registration_path, class: "font-semibold text-accent hover:underline" %>
      </div>
    </div>
  </div>
</main>

