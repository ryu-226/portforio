<main class="text-gray-700 flex justify-center items-center min-h-[80vh] px-4">
  <div class="w-full max-w-md p-8 bg-yellow-200 rounded-2xl shadow">
    <!-- タイトル -->
    <h1 class="text-2xl font-bold text-center mb-6">新規会員登録ページ</h1>

    <!-- エラー表示 -->
    <% if resource.errors.any? %>
      <div class="mb-6">
        <% resource.errors.full_messages.each do |msg| %>
          <div class="text-sm text-red-600 mt-1"><%= msg %></div>
        <% end %>
      </div>
    <% end %>

    <!-- 入力フォーム -->
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="mb-6">
        <%= f.label :nickname, 'ニックネーム', class: "block mb-1 font-semibold" %>
        <%= f.text_field :nickname, id: "user_nickname", class: "w-full px-4 py-2 rounded border bg-white", placeholder: "例）たろう", autocomplete: "nickname", autofocus: true %>
      </div>

      <div class="mb-6">
        <%= f.label :email, 'メールアドレス', class: "block mb-1 font-semibold" %>
        <%= f.email_field :email, id: "user_email", class: "w-full px-4 py-2 rounded border bg-white", placeholder: "例）taro@example.com", autocomplete: "email" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, 'パスワード（6文字以上、英数字両方を含める）', class: "block mb-1 font-semibold" %>
        <div class="relative">
          <%= f.password_field :password, id: "user_password", class: "w-full px-4 py-2 pr-10 rounded border bg-white password-field", placeholder: "例）abcde1", autocomplete: "new-password" %>
          <i class="fa-solid fa-eye absolute top-1/2 right-3 transform -translate-y-1/2 cursor-pointer toggle-password text-gray-400"></i>
        </div>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, '確認用パスワード', class: "block mb-1 font-semibold" %>
        <div class="relative">
          <%= f.password_field :password_confirmation, id: "user_password_confirmation", class: "w-full px-4 py-2 pr-10 rounded border bg-white password-field", autocomplete: "new-password" %>
          <i class="fa-solid fa-eye absolute top-1/2 right-3 transform -translate-y-1/2 cursor-pointer toggle-password text-gray-400"></i>
        </div>
      </div>

      <%= f.submit '新規登録', class: "w-full py-3 bg-primary text-white font-bold rounded-xl shadow hover:bg-primary/80 transition" %>
    <% end %>

    <!-- 会員登録済みの方の導線 -->
    <div class="flex items-center justify-center mt-6">
      <span class="mr-2 text-lg text-primary">▶</span>
      <%= link_to "会員登録済みの方はこちら", new_user_session_path, class: "font-semibold text-accent hover:underline" %>
    </div>
  </div>
</main>

