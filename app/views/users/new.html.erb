<main class=" text-gray-700 flex justify-center items-center min-h-[80vh] px-4">
  <div class="w-full max-w-md p-8 bg-yellow-200 rounded-2xl shadow">
    <h1 class="text-2xl font-bold text-center mb-6">新規会員登録ページ</h1>

    <% if @user.errors.any? %>
      <div class="mb-4 bg-red-100 text-red-600 rounded px-4 py-3">
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @user, url: signup_path, local: true do |f| %>
      <div class="mb-4">
        <%= f.label :nickname, 'ニックネーム', class: "block mb-1 font-semibold" %>
        <%= f.text_field :nickname, class: "w-full px-4 py-2 rounded border bg-white" , placeholder: "例）たろう", autofocus: true %>
      </div>

      <div class="mb-4">
        <%= f.label :email, 'メールアドレス', class: "block mb-1 font-semibold" %>
        <%= f.text_field :email, class: "w-full px-4 py-2 rounded border bg-white" , placeholder: "例）taro@example.com" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, 'パスワード（8文字以上、英数字混在）', class: "block mb-1 font-semibold" %>
        <%= f.password_field :password, class: "w-full px-4 py-2 rounded border bg-white" , placeholder: "例）********" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, '確認用パスワード', class: "block mb-1 font-semibold" %>
        <%= f.password_field :password_confirmation, class: "w-full px-4 py-2 rounded border bg-white" , placeholder: "例）********" %>
      </div>

      <%= f.submit '新規登録', class: "w-full py-3 bg-primary text-white font-bold rounded-xl shadow hover:bg-primary/80 transition disabled:opacity-50" %>
    <% end %>
    
    <div class="flex items-center justify-center mt-6">
      <span class="mr-2 text-lg text-primary">▶</span>
      <a href="/login" class="font-semibold text-accent hover:underline">会員登録済みの方はこちら</a>
    </div>
  </div>
</main>
