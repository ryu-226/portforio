<main class=" text-gray-700 flex justify-center items-center min-h-[80vh] px-4">
  <div class="w-full max-w-md p-8 bg-yellow-200 rounded-2xl shadow">
    <!-- タイトル -->
    <h1 class="text-2xl font-bold text-center mb-6">新規会員登録ページ</h1>
    <!-- 入力フォーム -->
    <%= form_with model: @user, url: signup_path, local: true do |f| %>
      <div class="mb-6">
        <%= f.label :nickname, 'ニックネーム', class: "block mb-1 font-semibold" %>
        <%= f.text_field :nickname, id: "user_nickname", class: "w-full px-4 py-2 rounded border bg-white" , placeholder: "例）たろう", autocomplete: "nickname", autofocus: true %>
        <% if @user.errors[:nickname].any? %>
          <div class="text-sm text-red-600 mt-1">
            <%= @user.errors.full_messages_for(:nickname).join('<br>').html_safe %>
          </div>
        <% end %>
      </div>

      <div class="mb-6">
        <%= f.label :email, 'メールアドレス', class: "block mb-1 font-semibold" %>
        <%= f.text_field :email, id: "user_email", class: "w-full px-4 py-2 rounded border bg-white" , placeholder: "例）taro@example.com", autocomplete: "email" %>
        <% if @user.errors[:email].any? %>
          <div class="text-sm text-red-600 mt-1">
            <%= @user.errors.full_messages_for(:email).join('<br>').html_safe %>
          </div>
        <% end %>
      </div>

      <div class="mb-6">
        <%= f.label :password, 'パスワード（8文字以上、英数字両方を含める）', class: "block mb-1 font-semibold" %>
        <%= f.password_field :password, id: "user_password", class: "w-full px-4 py-2 rounded border bg-white" , placeholder: "例）********", autocomplete: "new-password" %>
        <% if @user.errors[:password].any? %>
          <div class="text-sm text-red-600 mt-1">
            <%= @user.errors.full_messages_for(:password).join('<br>').html_safe %>
          </div>
        <% end %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, '確認用パスワード', class: "block mb-1 font-semibold" %>
        <%= f.password_field :password_confirmation, id: "user_password_confirmation", class: "w-full px-4 py-2 rounded border bg-white" , placeholder: "例）********", autocomplete: "new-password" %>
        <% if @user.errors[:password_confirmation].any? %>
          <div class="text-sm text-red-600 mt-1">
            <%= @user.errors.full_messages_for(:password_confirmation).join('<br>').html_safe %>
          </div>
        <% end %>
      </div>

      <%= f.submit '新規登録', class: "w-full py-3 bg-primary text-white font-bold rounded-xl shadow hover:bg-primary/80 transition" %>
    <% end %>
    <!-- 会員登録済みの方の導線 -->
    <div class="flex items-center justify-center mt-6">
      <span class="mr-2 text-lg text-primary">▶</span>
      <a href="/login" class="font-semibold text-accent hover:underline">会員登録済みの方はこちら</a>
    </div>
  </div>
</main>
