<div class="max-w-md mx-auto p-6 mt-3 bg-white rounded shadow text-gray-700">
  <h1 class="text-2xl font-bold mb-4">お問い合わせ</h1>

  <% if flash[:alert] %>
    <div class="mb-4 p-3 bg-red-100 text-red-700 rounded"><%= flash[:alert] %></div>
  <% end %>
  <% if notice %>
    <div class="mb-4 p-3 bg-green-100 text-green-700 rounded"><%= notice %></div>
  <% end %>

  <%= form_with url: contact_path, local: true do |f| %>
    <div class="mb-4">
      <%= label_tag :name, "お名前", class: "block font-semibold mb-1" %>
      <%= text_field_tag :name, params[:name], class: "w-full border rounded px-3 py-2" %>
    </div>
    <div class="mb-4">
      <%= label_tag :email, "メールアドレス", class: "block font-semibold mb-1" %>
      <%= email_field_tag :email, params[:email], class: "w-full border rounded px-3 py-2" %>
    </div>
    <div class="mb-4">
      <%= label_tag :message, "お問い合わせ内容", class: "block font-semibold mb-1" %>
      <%= text_area_tag :message, params[:message], rows: 6, class: "w-full border rounded px-3 py-2" %>
    </div>
    <%= submit_tag "送信する", class: "w-full bg-primary text-white py-2 rounded hover:bg-primary/80" %>
  <% end %>
</div>
