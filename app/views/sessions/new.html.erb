<main class="text-gray-700 flex justify-center items-center min-h-[80vh] px-4">
  <div class="w-full max-w-md p-8 bg-yellow-200 rounded-2xl shadow">
    <!-- タイトル -->
    <h1 class="text-2xl font-bold text-center mb-6">ログインページ</h1>
    <% if flash.now[:alert] %>
      <div class="mb-4 bg-red-100 text-red-600 rounded px-4 py-3">
        <%= flash.now[:alert] %>
      </div>
    <% end %>
    <!-- 入力ホーム -->
    <%= form_with url: login_path, local: true, scope: :session do |f| %>
      <div class="mb-6">
        <%= f.label :email, 'メールアドレス', class: "block mb-1 font-semibold" %>
        <%= f.email_field :email, value: params.dig(:session, :email), id: "session_email", class: "w-full px-4 py-2 rounded border bg-white", autocomplete: "email", autofocus: true %>
      </div>
      <div class="mb-6">
        <%= f.label :password, 'パスワード', class: "block mb-1 font-semibold" %>
        <%= f.password_field :password, id: "session_password", class: "w-full px-4 py-2 rounded border bg-white", autocomplete: "current-password" %>
      </div>
      <%= f.submit 'ログイン', class: "w-full py-3 bg-primary text-white font-bold rounded-xl shadow hover:bg-primary/80 transition" %>
    <% end %>
    <!-- パスワードリセット・新規会員登録への導線 -->
    <div class="flex flex-col items-center justify-center mt-6 gap-2">
      <!--
      <div class="flex items-center">
        <span class="mr-2 text-lg text-primary">▶</span>
        <a href="/password_resets/new" class="font-semibold text-accent hover:underline">パスワードを忘れた方はこちら</a>
      </div>
      -->
      <div class="flex items-center">
        <span class="mr-2 text-lg text-primary">▶</span>
        <a href="/signup" class="font-semibold text-accent hover:underline">新規会員登録の方はこちら</a>
      </div>
    </div>
  </div>
</main>
